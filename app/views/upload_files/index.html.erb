<div class="content">
  <h1 class="name-link">РАБОЧИЕ ПРОГРАММЫ ДИСЦИПЛИН</h1>
  <p id="notice"><%= notice %></p>

  <table class = "table-grid">
    <thead class="thead">
    <tr>
      <th class="thead_th">Название</th>
      <th class="thead_th">Документ</th>
      <th class="thead_th" colspan="3"></th>
    </tr>
    </thead>

    <tbody class="tbody">
    <% @upload_files.each do |upload_file| %>
      <tr class="tbody_tr">
        <td class="tbody_td"><%= upload_file.cover_letter %></td>
        <td class="tbody_td"><%= upload_file.title %></td>
        <td class="tbody_td"><%= link_to 'Download', download_path(upload_file) %></td>

        <% if current_user.is_admin? || current_user.is_professor? %>
          <!--<td class="tbody_td"><%= link_to 'Show', upload_file %></td>-->
          <td class="tbody_td"><%= link_to 'Edit', edit_upload_file_path(upload_file) %></td>
          <td class="tbody_td"><%= link_to 'Destroy', upload_file, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>



      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="add-institute">
    <% if current_user.is_admin? %>
      <%= link_to 'New Upload File', new_upload_file_path %>
    <% end %>
  </div>

</div>

<footer class='footer'>
