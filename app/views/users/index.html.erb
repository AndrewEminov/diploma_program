<div class = 'institute'>

  <h1 class="name-link">ПОЛЬЗОВАТЕЛИ</h1>
  <p id="notice"><%= notice %></p>

  <table class = "table-grid">
    <thead lass="thead">
    <tr class="thead_tr">
      <th class="thead_th">First name</th>
      <th class="thead_th">Last name</th>
      <th class="thead_th">Middle name</th>
      <th class="thead_th">Email</th>
      <th class="thead_th" colspan="3"></th>
    </tr>
    </thead>

    <tbody  class="tbody">
    <% @users.each do |user| %>
      <tr class="tbody_tr">
        <td class="tbody_td"><%= user.first_name %></td>
        <td class="tbody_td"><%= user.last_name %></td>
        <td class="tbody_td"><%= user.middle_name %></td>
        <td class="tbody_td"><%= user.email %></td>
        <td class="tbody_td"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="tbody_td"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<br>
  <div class="add-institute">
    <% if current_user.is_admin? %>
      <%= link_to 'New User', new_user_path %>
    <% end %>
  </div>

</div>
