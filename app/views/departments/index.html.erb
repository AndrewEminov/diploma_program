<div class = 'department'>
  <h1 class="name-link">КАФЕДРЫ</h1>
  <p id="notice"><%= notice %></p>
  <table class = "table-grid">

    <thead class="thead">
    <tr class="thead_tr">
      <th class="thead_th">Название</th>
      <th class="thead_th">Полное название</th>
      <th class="thead_th" colspan="2"></th>
    </tr>
    </thead>


    <tbody class="tbody">
    <% @departments.each do |department| %>
      <tr class="tbody_tr">
        <td class="tbody_td"><%= link_to department.name, department %></td>
        <td class="tbody_td"><%= department.full_name %></td>
        <% if current_user.is_admin? %>
          <td class="tbody_td"><%= link_to 'Редактировать', edit_department_path(department) %></td>
          <td class="tbody_td"><%= link_to 'Удалить', department, method: :delete, data: {confirm: 'Вы уверены?'} %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <div class="add-department">
    <% if current_user.is_admin? %>
      <%= link_to 'Новая кафедра', new_department_path %>
    <% end %>
  </div>

</div>

